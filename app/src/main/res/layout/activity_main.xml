<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrunn"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:text="EXIT APP" />

    <Button
        android:id="@+id/yest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/exit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/yeast"
        android:text="YEST SUBSTITUTION" />

    <Button
        android:id="@+id/hops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/yest"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/hop"
        android:text="HOPS SUBSTITUTION" />

    <Button
        android:id="@+id/grain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hops"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/grain"
        android:text="GRAIN SUBSTITUTION" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/grain"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="INFO" />
</RelativeLayout>