<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrunn"
    tools:context=".YeastCardActivity">

    <TextView
        android:id="@+id/textView601"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/brightWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="YEAST REPLACEMENT INFO" />

    <Button
        android:id="@+id/sluttyeastsub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:text="EXIT TO PRIOR PAGE" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView601"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/brightWhite"
        android:text="YEAST NAME" />

    <TextView
        android:id="@+id/yeastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textView10"
        android:layout_alignBaseline="@id/textView10"
        android:layout_marginStart="25dp"
        android:textStyle="bold"
        android:textColor="@color/brightWhite"
        android:hint="name" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_alignStart="@id/textView10"
        android:layout_marginTop="15dp"
        android:textColor="@color/brightWhite"
        android:text="Replacemenst" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sluttyeastsub"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/brightWhite"
        android:text="Comment" />

    <ListView
        android:id="@+id/listgjaer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/yeastname"
        android:layout_toEndOf="@id/textView12"
        android:layout_alignStart="@id/yeastname"
        android:layout_above="@id/sluttyeastsub"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>