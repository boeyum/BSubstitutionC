<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrunn"
    tools:context=".GranReplacementActivity">

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/brightWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="GRAIN REPLACEMENT" />

    <Button
        android:id="@+id/returnreplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:text="EXIT TO PRIOR PAGE" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView66"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/brightWhite"
        android:textStyle="bold|italic"
        android:text="Produser" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="@color/brightWhite"
        android:textStyle="bold|italic"
        android:text="Grain" />

    <ListView
        android:id="@+id/replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/returnreplace"
        android:layout_below="@id/textView5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignStart="@id/textView5"
        android:layout_marginTop="20dp"
        android:textColor="@color/brightWhite"
        android:textStyle="bold|italic"
        android:text="Substitutes" />

    <TextView
        android:id="@+id/produsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/textView4"
        android:layout_marginStart="100dp"
        android:textColor="@color/brightWhite"
        android:textColorHint="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15dp"
        android:hint="Manufacturer of grain" />

    <TextView
        android:id="@+id/korn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView5"
        android:layout_alignLeft="@id/produsent"
        android:textColor="@color/brightWhite"
        android:textColorHint="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15dp"
        android:hint="Grain type" />

</RelativeLayout>